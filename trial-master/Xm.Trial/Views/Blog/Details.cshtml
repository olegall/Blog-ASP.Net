@model Xm.Trial.Models.PostViewModel

@{
    ViewBag.Title = Model.Title;
}

<article class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 text-center">
    <header>
        <h1>@Model.Title</h1>
        @Html.Partial("PostMeta")
    </header>

    <figure>
        <img class="img-details" src="@Model.Picture" alt="@Model.Title">
        <figcaption>@Model.PictureCaption</figcaption>
    </figure>

    @Html.Raw(Model.Text)
       
    <footer>
        <p>
            <button class="btn btn-primary" data-action="like" data-post-id="@Model.Id">@Model.Likes</button>
        </p>

        @if (Model.Tags?.Any() == true)
        {
            <small>
                @foreach (var tag in Model.Tags)
                {
                    <a href="@Url.Action("Index", "Blog", new RouteValueDictionary { ["tag"] = tag.Id })" class="tag">@tag.Name</a>
                }
            </small>
        }
    </footer>
</article>